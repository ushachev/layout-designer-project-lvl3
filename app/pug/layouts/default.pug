include ../data/nav-items.pug

include ../components/icon.pug
include ../components/menu.pug
include ../components/search.pug
include ../components/tab-pane.pug
include ../components/avatar.pug

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='css/app.css', rel='stylesheet')
    title Hexlet Chat
  body
    .container-xxl.vh-100.p-0.p-md-4
      .d-flex.overflow-hidden.h-100.rounded-md.bg-white
        .col.col-md-4.d-flex.flex-column.mh-100.pb-md-4
          header.order-last.order-md-first.d-flex.px-3.py-4.bg-primary.text-light
            h1.visually-hidden Hexlet Chat
            a.d-flex.ms-1.me-auto.text-reset(href='/')
              +icon('logo')(width=15, height=25)
            block navigation
          aside.tab-content.hide-scrollbar.pt-5.px-4
            block aside
        main.d-none.d-md-block.mh-100.col-md-8.border-md-left
          block content
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js', integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13', crossorigin='anonymous')
