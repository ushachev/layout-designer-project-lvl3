mixin menu(...items)
  nav
    ul.nav(role='tablist')
      each item in items
        li.nav-item(role='presentation')
          -
            const { tabId, target, icon, text } = navItems[item]
            const isSelected = item === activeNavItem
            const btnClass = {
              active: isSelected,
              'd-md-none': item === 'currentChat',
            }

          a.btn-icon.d-flex.flex-column.flex-xxl-row.align-items-center.ps-3.py-0.pe-4.pe-md-3.border-0.text-reset.text-decoration-none(class=btnClass, id=tabId, href=`#${target}`, data-bs-toggle='tab', data-bs-target=`#${target}`, type='button', role='tab', aria-controls=target, aria-selected=isSelected)
            +icon(icon)(width=25, height=25)
            small.d-none.d-md-block.ms-2= text
